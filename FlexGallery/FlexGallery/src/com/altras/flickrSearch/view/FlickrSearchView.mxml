		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:TextInput id="searchTxt" left="0" right="80"/>
	<s:Button id="searchBtn" right="0" label="search"/>
	<s:Scroller left="0" right="0" top="30" height="100%">
		<s:DataGroup id="thumbGroup" width="100%" height="100%"
					 itemRenderer="com.altras.flickrSearch.view.renderers.FlickrThumbRenderer">
